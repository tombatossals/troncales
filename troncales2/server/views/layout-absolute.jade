!!! 5
html
  head
    meta(charset='utf-8')
    title= typeof(locals.title) !== 'undefined' ? locals.title : "Troncal de La Plana"
    link(rel="stylesheet", href=urls.base + "components/bootstrap/docs/assets/css/bootstrap.css")
    link(rel="stylesheet", href=urls.base + "components/bootstrap/docs/assets/css/bootstrap-responsive.css")
    link(rel="stylesheet", href=urls.base + "components/qtip/jquery.qtip.min.css")
    link(rel="stylesheet", href=urls.base + "styles/main-absolute.css")
    script(src="http://maps.googleapis.com/maps/api/js?sensor=false&language=en")
    script(src=urls.base + "js/main.js")

  body(ng-controller=locals.angular_controller, ng-cloak)
    div.container
      header
        div.navbar.navbar-fixed-top.mainmenu
          div.navbar-inner
            a.brand(href=urls.base) Troncal de La Plana
            div.pull-right.navmenu
              button.btn.btn-primary(id="all-links", ng-click="toggleLinks()", data-toggle="button", style="margin-right: .5em;") Ver enlaces
              if (locals.username)
                div.btn-group
                  a.btn.btn-danger(href=urls.user) #{locals.username.displayName}
                  a.btn.btn-danger.dropdown-toggle(data-toggle="dropdown")
                    span.caret
                  ul.dropdown-menu
                    li
                      a(ng-click="newmarker=true", href="#")
                        i.icon-star-empty
                        |&nbspAfegir un nou supernode
                    li.addenlace
                      a(href='#add/enlace')
                        i.icon-resize-horizontal
                        |&nbsp;Afegir un nou enlla√ß
                    li
                      a(href=urls.logout) Logout
              else
                a.btn.btn-warning(href=urls.login) Login

    block main
